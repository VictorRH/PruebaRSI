@model ProjectRSI.Domain.Categoria
@{
    ViewData["Title"] = "Crear Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear Categoria</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NombreCat" class="control-label">Nombre Categoria</label>
                    <input asp-for="NombreCat" class="form-control" />
                    <span asp-validation-for="NombreCat" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Insertar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}