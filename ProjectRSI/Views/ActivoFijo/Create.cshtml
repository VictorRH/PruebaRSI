@model ProjectRSI.Domain.ActivoFijo
@{
    ViewData["Title"] = "Crear Activo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear Activo</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Marca" class="control-label"></label>
                    <input asp-for="Marca" class="form-control" />
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Modelo" class="control-label"></label>
                    <input asp-for="Modelo" class="form-control" />
                    <span asp-validation-for="Modelo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NumSerie" class="control-label">Numero de Serie</label>
                    <input asp-for="NumSerie" class="form-control" />
                    <span asp-validation-for="NumSerie" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <select asp-for="IdCategoria" asp-items="ViewBag.ListaCategoria" class="form-control">
                        <option value="">Seleccione una categoría</option>
                    </select>
                    <span asp-validation-for="IdCategoria" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ValorAdqui" class="control-label">Valor Adquisicion</label>
                    <input asp-for="ValorAdqui" class="form-control" />
                    <span asp-validation-for="ValorAdqui" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Insertar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}